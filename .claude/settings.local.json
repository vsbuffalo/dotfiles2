{
  "permissions": {
    "allow": [
      "Bash(git -C /Users/vsb/dotfiles2 status --short)",
      "Bash(find:*)",
      "Bash(git -C /Users/vsb/dotfiles2 ls-tree:*)",
      "Bash(test:*)",
      "WebSearch",
      "WebFetch(domain:howborisusesclaudecode.com)",
      "WebFetch(domain:github.com)",
      "Bash(gh api:*)"
    ],
    "deny": [
      "Bash(*git add -A*)",
      "Bash(git add --all*)",
      "Read(./.env)",
      "Read(./.env.*)"
    ],
    "allow": [
      "Bash(git merge:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -re 'if (.tool_input.command | test(\"git add -A\")) then {\"permissionDecision\": \"deny\", \"permissionDecisionReason\": \"Use git add with specific files instead of -A\"} else empty end'"
          }
        ]
      }
    ]
  }
}

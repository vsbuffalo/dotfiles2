{
  "permissions": {
    "allow": [
      "Edit",
      "Read",
      "Write",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch(*)",

      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git switch:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git ls-tree:*)",
      "Bash(git ls-files:*)",
      "Bash(git rev-parse:*)",
      "Bash(git -C:*)",
      "Bash(gh:*)",

      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(test:*)",
      "Bash([:*)",
      "Bash(which:*)",
      "Bash(command:*)",
      "Bash(mkdir:*)",
      "Bash(ln:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(tput:*)",

      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo run:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo bench:*)",
      "Bash(rustup show:*)",
      "Bash(rustup which:*)",

      "Bash(dune build:*)",
      "Bash(dune test:*)",
      "Bash(dune exec:*)",
      "Bash(dune fmt:*)",
      "Bash(dune clean:*)",
      "Bash(opam list:*)",
      "Bash(opam show:*)",

      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm ls:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(uv lock:*)",
      "Bash(uv tree:*)",

      "Bash(make:*)",
      "Bash(dprint:*)",
      "Bash(brew list:*)",
      "Bash(brew info:*)"
    ],
    "deny": [
      "Bash(*git add -A*)",
      "Bash(git add --all*)",
      "Bash(git push --force*)",
      "Bash(git push -f *)",
      "Bash(git reset --hard*)",
      "Bash(git clean -f*)",
      "Bash(rm -rf *)",

      "Read(./.env)",
      "Read(./.env.*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -re 'if (.tool_input.command | test(\"git add -A\")) then {\"permissionDecision\": \"deny\", \"permissionDecisionReason\": \"Use git add with specific files instead of -A\"} else empty end'"
          }
        ]
      }
    ]
  }
}
